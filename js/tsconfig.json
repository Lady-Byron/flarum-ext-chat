{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",

    "jsx": "preserve",
    "jsxFactory": "m",
    "jsxFragmentFactory": "m.fragment",

    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "noEmit": true,
    "sourceMap": true,
    "lib": ["es2018", "dom"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "admin.js",
    "forum.js"
  ],
  "exclude": ["dist", "node_modules"]
}
